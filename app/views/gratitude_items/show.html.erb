<% title "View Gratitude" %>

<%= render @gratitude_item %>

<div class="flex flex-row gap-2">
    <%= link_to "Edit Gratitude", edit_gratitude_item_path(@gratitude_item), class: "btn btn-primary"%>
    <%= link_to "All Gratitudes", gratitude_items_path, class: "btn btn-primary"%>
    <%= link_to "Show Reflections", gratitude_item_reflections_path(@gratitude_item), class: "btn btn-primary"%>
    <%= button_to "Delete Gratitude", @gratitude_item, method: :delete, class: "btn btn-error", form: { data: {turbo_confirm: "Are you sure? "}}%>
</div>