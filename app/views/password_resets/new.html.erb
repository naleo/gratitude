<% title "Reset Password" %>

<%= form_tag password_resets_path, :method => :post do %>
  <div class="form-control w-full max-w-xs">
    <label class="label">
      <span class="label-text">Email:</span>
    </label>
    <%= text_field_tag :email, params[:email], class: "input input-bordered input-primary w-full max-w-xs" %>
  </div>
  <%= submit_tag "Reset Password", class: "btn btn-secondary mt-2" %>
<% end %>