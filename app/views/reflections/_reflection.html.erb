  <div id="<%= dom_id(reflection) %>" class="card w-full lg:w-1/3 bg-secondary shadow-xl my-2">
      <div class="card-body">
        <h2 class="card-title"><%= reflection.title %></h2>
        <p><%= reflection.body %></p>
        <p><%= reflection.reflection_date %></p>
        <div class="card-actions justify-end">
            <%= link_to "Edit Reflection", edit_gratitude_item_reflection_path(@gratitude_item,reflection), class: "btn btn-primary my-2"%>
            <%= button_to "Delete Reflection", [@gratitude_item,reflection], method: :delete, class: "btn btn-error my-2", form: { data: { turbo_confirm: "Are you sure? " } } %>
        </div>
    </div>
  </div>